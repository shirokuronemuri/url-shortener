{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "(.e2e-spec.ts$|.int-spec.ts$)",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": [
    "dotenv/config"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^test/(.*)$": "<rootDir>/../test/$1"
  },
  "setupFilesAfterEnv": [
    "./setup.ts"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/dist/"
  ]
}
